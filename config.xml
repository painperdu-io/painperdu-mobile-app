<?xml version='1.0' encoding='utf-8'?>
<widget id="io.painperdu.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PainPerdu</name>
    <description>
        PainPerdu c'est la solution collaborative et de proximit√© qui lutte contre le gaspillage alimentaire au sein de votre foyer !
    </description>
    <author email="contact@painperdu.io" href="http://blog.painperdu.io">
        Pain Perdu Team
    </author>

    <!-- // painperdu icon -->
    <!--<icon src="res/AppIcon.png" />-->

    <!-- // painperdu entry point -->
    <content src="index.html" />

    <!-- plugins -->
    <plugin name="cordova-plugin-console" spec="1.0.3" />
    <plugin name="cordova-plugin-device" spec="1.1.2" />
    <plugin name="cordova-plugin-dialogs" spec="1.2.1" />
    <plugin name="cordova-plugin-geolocation" spec="2.2.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="1.4.0" />
    <plugin name="cordova-plugin-statusbar" spec="2.1.3" />
    <plugin name="cordova-plugin-vibration" spec="2.1.1" />
    <plugin name="cordova-plugin-whitelist" spec="1.2.2" />

    <!-- whitelisting -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <!-- // Android platform -->
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

